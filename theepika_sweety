<body>
    <div class="container">
        <header>
            <h1>роХрпЛрокрпНрокрпБ рокроХро┐ро░рпНро╡рпБ родро│роорпН</h1>
            <p class="subtitle">роЙроЩрпНроХро│рпН роХрпЛрокрпНрокрпБроХро│рпИ роОро│ро┐родро╛роХ рокроХро┐ро░рпНроирпНродрпБ роХрпКро│рпНро│рпБроЩрпНроХро│рпН</p>
        </header>

        <div class="upload-section">
            <h2 class="upload-title">ЁЯУд рокрпБродро┐роп роХрпЛрокрпНрокрпБ рокродро┐ро╡рпЗро▒рпНро▒роорпН</h2>
            <div class="form-group">
                <input type="text" id="fileName" placeholder="роХрпЛрокрпНрокрпБ рокрпЖропро░рпН">
            </div>
            <div class="form-group">
                <input type="text" id="fileSize" placeholder="роХрпЛрокрпНрокрпБ роЕро│ро╡рпБ (роО.роХро╛: 2.5 MB)">
            </div>
            <button class="btn-upload" id="uploadBtn" onclick="uploadFile()">роХрпЛрокрпНрокрпИ рокродро┐ро╡рпЗро▒рпНро▒рпБ</button>
        </div>

        <div class="files-grid" id="filesContainer">
            <div class="loading">роПро▒рпНро▒рпБроХро┐ро▒родрпБ...</div>
        </div>
    </div>

    <script>
        let files = [];
        let userLikes = {};
        let userViews = {};

        // Initialize from localStorage
        window.addEventListener('DOMContentLoaded', () => {
            loadFromStorage();
            renderFiles();
        });

        function loadFromStorage() {
            const stored = localStorage.getItem('tamilFiles');
            const storedLikes = localStorage.getItem('userLikes');
            const storedViews = localStorage.getItem('userViews');
            
            if (stored) {
                files = JSON.parse(stored);
            }
            if (storedLikes) {
                userLikes = JSON.parse(storedLikes);
            }
            if (storedViews) {
                userViews = JSON.parse(storedViews);
            }
        }

        function saveToStorage() {
            localStorage.setItem('tamilFiles', JSON.stringify(files));
            localStorage.setItem('userLikes', JSON.stringify(userLikes));
            localStorage.setItem('userViews', JSON.stringify(userViews));
        }

        function renderFiles() {
            const container = document.getElementById('filesContainer');
            
            if (files.length === 0) {
                container.innerHTML = '<div class="empty-state">роЗройрпНройрпБроорпН роХрпЛрокрпНрокрпБроХро│рпН роОродрпБро╡рпБроорпН роЗро▓рпНро▓рпИ. роорпБродро▓рпН роХрпЛрокрпНрокрпИ рокродро┐ро╡рпЗро▒рпНро▒рпБроЩрпНроХро│рпН!</div>';
                return;
            }

            container.innerHTML = files.map((file, index) => {
                // Track view on first render
                if (!userViews[file.id]) {
                    userViews[file.id] = true;
                    file.views++;
                    saveToStorage();
                }
                
                const isLiked = userLikes[file.id] || false;
                
                return `
                    <div class="file-card">
                        <div class="file-name">${file.name}</div>
                        <div class="file-info">роХрпЛрокрпНрокрпБ роЕро│ро╡рпБ: ${file.size}</div>
                        <div class="file-info">рокродро┐ро╡рпЗро▒рпНро▒рокрпНрокроЯрпНроЯ родрпЗродро┐: ${file.uploadDate}</div>
                        
                        <div class="file-stats">
                            <button class="like-btn ${isLiked ? 'liked' : ''}" 
                                    onclick="likeFile(${index})" 
                                    ${isLiked ? 'disabled' : ''}>
                                <span>${isLiked ? 'тЭдя╕П' : 'ЁЯдН'}</span>
                                <span>${file.likes}</span>
                            </button>
                            <div class="views">
                                <span>ЁЯСБя╕П</span>
                                <span>роХро╛роЯрпНроЪро┐роХро│рпН: ${file.views}</span>
                            </div>
                        </div>
                        
                        <button class="download-btn" onclick="downloadFile('${file.name}')">
                            <span>тмЗя╕П</span>
                            роХрпЛрокрпНрокрпИрокрпН рокродро┐ро╡ро┐ро▒роХрпНроХрпБ
                        </button>
                    </div>
                `;
            }).join('');
        }

        function uploadFile() {
            const fileName = document.getElementById('fileName').value.trim();
            const fileSize = document.getElementById('fileSize').value.trim();

            if (!fileName) {
                showAlert('роХрпЛрокрпНрокрпБ рокрпЖропро░рпИ роЙро│рпНро│ро┐роЯро╡рпБроорпН!', 'error');
                return;
            }

            const newFile = {
                id: `file_${Date.now()}`,
                name: fileName,
                size: fileSize || '0 MB',
                uploadDate: new Date().toLocaleDateString('ta-IN'),
                likes: 0,
                views: 0
            };

            files.unshift(newFile);
            saveToStorage();
            renderFiles();
            
            document.getElementById('fileName').value = '';
            document.getElementById('fileSize').value = '';
            
            showAlert('роХрпЛрокрпНрокрпБ ро╡рпЖро▒рпНро▒ро┐роХро░рооро╛роХ рокродро┐ро╡рпЗро▒рпНро▒рокрпНрокроЯрпНроЯродрпБ!', 'success');
        }

        function likeFile(index) {
            const file = files[index];
            
            if (userLikes[file.id]) {
                showAlert('роирпАроЩрпНроХро│рпН роПро▒рпНроХройро╡рпЗ роЗродрпИ ро╡ро┐ро░рпБроорпНрокро┐ропрпБро│рпНро│рпАро░рпНроХро│рпН!', 'info');
                return;
            }

            file.likes++;
            userLikes[file.id] = true;
            saveToStorage();
            renderFiles();
            showAlert('ро╡ро┐ро░рпБрокрпНрокроорпН роЪрпЗро░рпНроХрпНроХрокрпНрокроЯрпНроЯродрпБ! тЭдя╕П', 'success');
        }

        function downloadFile(fileName) {
            showAlert(`"${fileName}" рокродро┐ро╡ро┐ро▒роХрпНроХроорпН родрпКроЯроЩрпНроХрпБроХро┐ро▒родрпБ...`, 'success');
        }

        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert';
            alertDiv.textContent = message;
            
            if (type === 'error') {
                alertDiv.style.background = '#ef4444';
            } else if (type === 'info') {
                alertDiv.style.background = '#3b82f6';
            }
            
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 3000);
        }
    </script>
